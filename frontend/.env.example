# Amadeus API Configuration
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
AMADEUS_ENVIRONMENT=test

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8081
NEXT_PUBLIC_DATA_INGESTION_URL=http://localhost:8083

# Application Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Database Configuration (for backend services)
DATABASE_URL=postgresql://user:password@localhost:5432/spontra
CASSANDRA_HOSTS=localhost
CASSANDRA_KEYSPACE=spontra
ELASTICSEARCH_URL=http://localhost:9200
REDIS_URL=redis://localhost:6379

# External Services
YOUTUBE_API_KEY=your_youtube_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Theme Configuration
NEXT_PUBLIC_SUPPORTED_THEMES=party,adventure,learn,shopping,nature
NEXT_PUBLIC_DEFAULT_THEME=adventure

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_FALLBACKS=false
NEXT_PUBLIC_DEBUG_LOGGING=false