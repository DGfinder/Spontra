# Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
GO_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=spontra
DB_PASSWORD=development
DB_NAME=spontra

# Database URLs
USER_SERVICE_DB_URL=postgres://spontra:development@localhost:5432/user_service_db?sslmode=disable
SEARCH_SERVICE_DB_URL=postgres://spontra:development@localhost:5432/search_service_db?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=spontra-consumer-group

# Cassandra Configuration (optional, for development)
CASSANDRA_HOSTS=localhost:9042
CASSANDRA_KEYSPACE=spontra
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Service URLs
USER_SERVICE_URL=http://localhost:8080
SEARCH_SERVICE_URL=http://localhost:8081
PRICING_SERVICE_URL=http://localhost:8082
DATA_INGESTION_SERVICE_URL=http://localhost:8083

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_ENVIRONMENT=development

# External API Keys (for integration)
AMADEUS_BASE_URL=https://test.api.amadeus.com
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_TIMEOUT=30s
AMADEUS_MAX_RETRIES=3
AMADEUS_RETRY_DELAY=1s
AMADEUS_REQUESTS_PER_SECOND=10
AMADEUS_BURST_SIZE=20
AMADEUS_WAIT_TIME=100ms

SABRE_API_KEY=your_sabre_api_key
SABRE_API_SECRET=your_sabre_api_secret
SABRE_ENDPOINT=https://api.test.sabre.com

SKYSCANNER_API_KEY=your_skyscanner_api_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@spontra.com

# Google Cloud Configuration (for production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# BigQuery Configuration
BIGQUERY_DATASET_ID=spontra_dev_analytics

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_PRICE_ALERTS=true
ENABLE_RECOMMENDATIONS=false
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT_MINUTES=30

# File Upload (future)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Search Configuration
SEARCH_TIMEOUT_SECONDS=30
MAX_SEARCH_RESULTS=500
CACHE_TTL_MINUTES=10