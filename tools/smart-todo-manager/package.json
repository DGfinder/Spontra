{
  "name": "smart-todo-manager",
  "version": "1.0.0",
  "description": "Intelligent todo tracking and completion detection for development projects",
  "main": "dist/SmartTodoManager.js",
  "bin": {
    "smart-todo": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build",
    "start": "node dist/cli.js start",
    "start:background": "./scripts/start-background.sh",
    "stop:background": "./scripts/stop-background.sh",
    "install:service": "./scripts/install.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop smart-todo-manager",
    "pm2:restart": "pm2 restart smart-todo-manager",
    "docker:build": "docker build -t smart-todo-manager .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "health": "curl -s http://localhost:3001/health | jq || curl -s http://localhost:3001/health",
    "stats": "curl -s http://localhost:3001/stats | jq || curl -s http://localhost:3001/stats",
    "progress": "curl -s http://localhost:3001/progress | jq || curl -s http://localhost:3001/progress"
  },
  "keywords": [
    "todo",
    "task-management",
    "git-integration",
    "productivity",
    "automation",
    "completion-detection"
  ],
  "author": "Spontra Development Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "uuid": "^9.0.1",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spontra/smart-todo-manager.git"
  },
  "bugs": {
    "url": "https://github.com/spontra/smart-todo-manager/issues"
  },
  "homepage": "https://github.com/spontra/smart-todo-manager#readme"
}